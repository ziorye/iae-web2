<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="day0907.mybatis.mapper.PostMapper">
	<sql id="select-column">
		id, title, slug, cover, description, content, status, user_id, view_count, created_at as createdAt, updated_at
	</sql>

	<select id="selectAll" resultType="Post">
		select <include refid="select-column"/>  from post;
	</select>
</mapper>


